<!doctype html>
<html lang="pl">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Płytoteka</title>

  <%= stylesheet_link_tag    "application", :media => "all" %>

  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= javascript_include_tag "application" %>

  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <div class="nav">
          <ul class="nav">
            <li>
                <%= link_to "Płytoteka", albums_path %>
            </li>
            <% if current_user %>
              <li>
                <%= link_to "Wyloguj się", signout_path, id: "sign_out" %>
              </li>
              <li style="margin-top: 10px; padding-left: 10px;">
                  Jesteś zalogowany jako <strong><%= current_user.name %></strong>!
              </li>
            <% else %>
              <li>
                <%= link_to "Zaloguj się poprzez Facebooka", "/auth/facebook", id: "sign_in" %>
              </li>
            <% end %> 
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container" style="margin-top: 60px;">
    <div class="row">
      <div class="span12"><%= yield %></div>
    </div>
    
    <footer>
      <center>
        <br/><p>&copy; Bełcik Jakub 2013</p>
      </center>
    </footer>
  </div>

</body>
</html>
